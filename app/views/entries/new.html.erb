<div class="container">
  <h1>New Entry</h1>

  <form action="/entries" method="post" enctype="multipart/form-data">
    <%= csrf_meta_tags %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

    <!-- Adjusted hidden input field for place_id to nest under 'entry' -->
    <input type="hidden" name="entry[place_id]" value="<%= @place_id %>">

    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <!-- Adjusted name attribute to nest under 'entry' -->
      <input type="text" name="entry[title]" id="title" class="form-control" required>
    </div>
    
    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <!-- Adjusted name attribute to nest under 'entry' -->
      <textarea name="entry[description]" id="description" class="form-control" rows="4" required></textarea>
    </div>
    
    <div class="mb-3">
      <label for="occurred_on" class="form-label">Occurred On:</label>
      <!-- Adjusted name attribute to nest under 'entry' -->
      <input type="date" name="entry[occurred_on]" id="occurred_on" class="form-control" required>
    </div>

    <div class="mb-3">
      <%= label_tag "uploaded_image", "Uploaded Image:", class: "form-label" %>
      <%= file_field_tag "entry[uploaded_image]", class: "form-control", :accept => "image/png,image/jpg,image/jpeg,image/gif" %>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>












